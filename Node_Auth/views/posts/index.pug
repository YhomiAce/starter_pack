extends ../layouts

block content
  h1 Post Page
  if posts != null
    each post, i in posts
      .well
        .row
          .col-md-6
            img.img-thumbnail(src=`/uploads/${post.post_image}` width="300px")
          .col-md-6
            h3 #{post.title}
            p #{post.body}
            hr
            a.btn.btn-default(href=`/posts/show/${post.id}`) Read more...
            p Author: {getUserId(post.author)}
            small written on: #{post.created_at}
    
