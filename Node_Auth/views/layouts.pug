doctype html
html(lang='en')
  head
    title Node Auth
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') NodeAuth
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class=(title == 'Members' ? 'active' : ''))
              a(href='/') Members
            li(class=(title == 'Upload' ? 'active' : ''))
              a(href='/upload') Upload
            li(class=(title == 'Post' ? 'active' : ''))
              a(href='/posts') Posts
            li(class=(title == 'Add Post' ? 'active' : ''))
              a(href='/posts/add') Add Post
            li(class=(title == 'Add Category' ? 'active' : ''))
              a(href='/posts/category') Add Category
          ul.nav.navbar-nav.navbar-right
            if user 
             li
                a(href='/auth/logout') Logout
             li
                a(href='/auth/logout') #{user.username}
                  
            else
             li(class=(title == 'Register' ? 'active' : ''))
                a(href='/auth/signup') Register
             li(class=(title == 'Login' ? 'active' : ''))
                a(href='/auth/login') Login
           
    .container
     include partials/message.pug  
     block content
       
     
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')
